@model System.Data.DataTable

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    .table thead th {
        background-color: #212529;
        color: white;
    }
</style>

<div class="card mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Department List</h5>
            <a class="btn btn-primary" asp-controller="Department" asp-action="AddDepartment">+ Add Department</a>
        </div>

        <table class="table table-bordered text-center align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Department Name</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["DepartmentName"]</td>
                        <td>@row["Description"]</td>
                        <td class="text-center">
                            <a class="btn btn-outline-success btn-sm"
                               asp-controller="Department"
                               asp-action="AddDepartment"
                               asp-route-id="@row["DepartmentID"]">
                                <i class="bi bi-pencil-fill">Edit</i>
                            </a>
                            <a class="btn btn-outline-danger btn-sm"
                               asp-controller="Department"
                               asp-action="DeleteDepartment"
                               asp-route-id="@row["DepartmentID"]"
                               onclick="return confirm('Are you sure you want to delete this department?');">
                                <i class="bi bi-x">Delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
