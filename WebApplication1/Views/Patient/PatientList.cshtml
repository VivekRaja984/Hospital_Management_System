@model System.Data.DataTable;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<style>


    .table thead th {
        background-color: #212529;  
        color: white;
    }
</style>
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title">Patient List</h5>
            <a class="btn btn-primary" asp-controller="Patient" asp-action="AddPatient">+Add Patient</a>
        </div>

        <!-- Bordered Table -->
        <table class="table table-bordered text-center align-middle">
            <thead class="bg-dark text-white">

                <tr>
                    <th>
                        <b>N</b>ame
                    </th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <!--<input type="hidden" asp-for="PatientID" />-->

                        <td>@row["Name"]</td>
                        <td>@row["Gender"]</td>
                        <td>@row["Email"]</td>
                        <td>@row["Phone"]</td>
                        <td>@row["City"]</td>
                        <td>@row["State"]</td>
                        <td class="text-center">
                            <input type="hidden" name="PatientID" value="@row["PatientID"]" />

                            <a class="btn btn-outline-success btn-sm" asp-controller="Patient" asp-action="AddPatient" asp-route-PatientID="@row["PatientID"]"><i>Edit</i></a>
                            <a class="btn btn-outline-success btn-sm" asp-controller="Patient" asp-action="Delete_patient" asp-route-PatientID="@row["PatientID"]"><i>Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
