@model System.Data.DataTable

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    .table thead th {
        background-color: #212529;
        color: white;
    }
</style>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="card-title">Appointment List</h5>
        <a class="btn btn-primary" asp-controller="Appointment" asp-action="AddAppointment">+Add Appointment</a>
        </div>
        <form method="get" asp-action="AppointmentList" asp-controller="Appointment" class="row g-3 mb-3">

            <div class="col-md-3">
                <select name="doctorId" class="form-select">
                    <option value="">-- Select Doctor --</option>
                    @foreach (System.Data.DataRow row in ViewBag.Doctors.Rows)
                    {
                        <option value="@row["DoctorID"]">@row["Name"]</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <select name="patientId" class="form-select">
                    <option value="">-- Select Patient --</option>
                    @foreach (System.Data.DataRow row in ViewBag.Patients.Rows)
                    {
                        <option value="@row["PatientID"]">@row["Name"]</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <select name="statusFilter" class="form-select">
                    <option value="">-- Select Status --</option>
                    @foreach (var status in ViewBag.StatusList)
                    {
                        <option value="@status">@status</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-action="AppointmentList" class="btn btn-secondary">Reset</a>
            </div>

        </form>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table table-bordered text-center align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Doctor Name</th>
                    <th>Patient Name</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Amount</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["DoctorName"]</td>
                        <td>@row["PatientName"]</td>
                        <td>@Convert.ToDateTime(row["AppointmentDate"]).ToString("dd-MM-yyyy hh:mm tt")</td>
                        <td>@row["AppointmentStatus"]</td>
                        <td>@row["TotalConsultedAmount"]</td>
                        <td class="text-center">
                            <a class="btn btn-outline-success btn-sm"
                               asp-controller="Appointment"
                               asp-action="AddAppointment"
                               asp-route-AppointmentID="@row["AppointmentID"]">
                                <i class="bi bi-pencil-fill">Edit</i>
                            </a>
                            <a class="btn btn-outline-danger btn-sm"
                               asp-controller="Appointment"
                               asp-action="Delete"
                               asp-route-AppointmentID="@row["AppointmentID"]"
                               onclick="return confirm('Are you sure you want to delete this appointment?');">
                                <i class="bi bi-x">Delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
