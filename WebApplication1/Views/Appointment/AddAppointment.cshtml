@model WebApplication1.Models.AppointmentModel

@{
    ViewData["Title"] = Model.AppointmentID == 0 ? "Add Appointment" : "Edit Appointment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Appointment" asp-action="AppointmentList">Appointment</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>

                    <form method="post" asp-action="SaveAppointment" asp-controller="Appointment">
                        <input type="hidden" asp-for="AppointmentID" />

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Select Doctor</label>
                            <div class="col-sm-9">
                                <select name="DoctorID" class="form-control" required>
                                    <option value="">Select Doctor</option>
                                    @foreach (System.Data.DataRow row in ViewBag.Doctors.Rows)
                                    {
                                        var selected = Model.DoctorID.ToString() == row["DoctorID"].ToString() ? "selected" : "";
                                        @Html.Raw($"<option value='{row["DoctorID"]}' {selected}>{row["Name"]}</option>")
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Select Patient</label>
                            <div class="col-sm-9">
                                <select name="PatientID" class="form-control" required>
                                    <option value="">Select Patient</option>
                                    @foreach (System.Data.DataRow row in ViewBag.Patients.Rows)
                                    {
                                        var selected = Model.PatientID.ToString() == row["PatientID"].ToString() ? "selected" : "";
                                        @Html.Raw($"<option value='{row["PatientID"]}' {selected}>{row["Name"]}</option>")
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="AppointmentDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Appointment Status</label>
                            <div class="col-sm-9">
                                <select name="AppointmentStatus" class="form-select">
                                    <option value="">-- Select Status --</option>
                                    @if (Model.AppointmentStatus == "Pending")
                                    {
                                        <option value="Pending" selected>Pending</option>
                                        <option value="Completed">Completed</option>
                                    }
                                    else if (Model.AppointmentStatus == "Completed")
                                    {
                                        <option value="Pending">Pending</option>
                                        <option value="Completed" selected>Completed</option>
                                    }
                                    else
                                    {
                                        <option value="Pending">Pending</option>
                                        <option value="Completed">Completed</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(m => m.AppointmentStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="Description" class="form-control" maxlength="250"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="SpecialRemarks" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="SpecialRemarks" class="form-control" maxlength="250"></textarea>
                                <span asp-validation-for="SpecialRemarks" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="TotalConsultedAmount" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="TotalConsultedAmount" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="TotalConsultedAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">
                                    @(Model.AppointmentID == 0 ? "Add" : "Update")
                                </button>
                                <a asp-controller="Appointment" asp-action="AppointmentList" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
