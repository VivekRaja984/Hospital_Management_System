@model WebApplication1.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<body style="background-color: #f1f5f9;">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm p-4 rounded-2" style="width: 100%; max-width: 420px;">

            <h4 class="text-center fw-semibold mb-2">Login</h4>
            <p class="text-center text-muted mb-4">Welcome back! Please enter your credentials.</p>

            <form asp-action="Loginpage" asp-controller="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <div class="input-group rounded-3">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Your Email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <div class="input-group rounded-3">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Your Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button class="btn fw-semibold text-light" style="background-color: #3370cc;" type="submit">
                        Login
                    </button>
                </div>
                <div class="text-center mt-3">
                    <p>
                        Don’t have an account?
                        <a asp-controller="Login" asp-action="Signup">Register here</a>
                    </p>
                </div>


                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3" id="WrnMessage" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        setTimeout(() => {
            var msg = document.getElementById("WrnMessage");
            if (msg) {
                msg.style.display = "none";
            }
        }, 3000);
    </script>
</body>
