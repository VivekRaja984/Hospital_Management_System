
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<body style="background-color: #f1f5f9;">

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm p-4 rounded-2" style="width: 100%; max-width: 420px;">

           

            <h4 class="text-center fw-semibold mb-2">Login</h4>
            <p class="text-center text-muted mb-4">Welcome back! Please enter your credentials.</p>

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <div class="input-group rounded-3">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" class="form-control" name="email" placeholder="Your Email">
                    </div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-bold">Password</label>
                    <div class="input-group rounded-3">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="password" placeholder="Your Password">
                    </div>
                </div>

                <div class="d-grid">
                    <button class="btn fw-semibold text-light" style="background-color: #3370cc;" type="submit">
                        Login
                    </button>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger mt-3" id="WrnMessage" role="alert">
                        @TempData["Message"]
                    </div>
                }

            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        setTimeout(() => {
            var msg = document.getElementById("WrnMessage");
            if (msg) {
                msg.style.display = "none";
            }
        }, 3000);
    </script>

</body>